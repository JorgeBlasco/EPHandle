<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jorgeblascoespinosa.ep_handle">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".Activities.TerapeutaActivity"
            android:parentActivityName=".Activities.MainActivity">
        </activity>
        <activity
            android:name=".Activities.SesionActivity"
            android:parentActivityName=".Activities.MainActivity">
        </activity>
        <activity
            android:name=".Activities.DispositivoActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.PreferencesActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.AcercaDeActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />
    </application>

</manifest>